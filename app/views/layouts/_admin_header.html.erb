<header id="header">
  <div class="header_top">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="contactinfo">
            <ul class="nav nav-pills">
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-phone"></i><%= t ".phone" %>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-envelope"></i><%= t ".email" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="social-icons pull-right">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to t(".facebook") do %>
                  <i class="fa fa-facebook"></i>
                <% end %>
              </li>
              <li>
                <% link_to t(".google") do %>
                  <i class='fa fa-google-plus'></i>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>	
  <div class="header-middle">
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
          <div class="logo pull-left">
            <%= link_to image_tag("home/logo-admin.png", alt: "Shop logo"), admin_users_path %>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="shop-menu pull-right">
            <ul class="nav navbar-nav">
              <% if logged_in? %>
                <li><%= link_to t(".user"), admin_users_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= t ".item"%>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(".all_items"), admin_products_path %></li>
                    <li><%= link_to t(".add_new"), new_admin_product_path %></li>
                  </ul>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-user"></i><%= t ".account" %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(".profile"), current_user %></li>
                    <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li><%= link_to t(".log_out"), logout_path, method: :delete %></li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to "<i class='fa fa-lock'></i> Login".html_safe, login_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="header-bottom">
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <div class="mainmenu pull-left">
            <ul class="nav navbar-nav collapse navbar-collapse">
              <li><%= link_to t(".home"), root_path, class: "active" %></li>
              <li><%= link_to t(".about"), help_path %></li>
              <li><%= link_to t(".help"), help_path %></li>
              <li><%= link_to t(".contact"), contact_path %></li>
            </ul>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="search_box pull-right">
            <%= form_tag admin_products_path, method: :get do %>
              <div class="row">
                <div class="col-sm-6">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t(".search") %>
                </div>
                <div class="col-sm-2">
                  <%= submit_tag t(".search"), class: "btn btn-primary" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
