<% provide :title, t(".users_title") %>
<div class="kenh14-border" id="blog-title" >
  <h1><%= t ".users_title" %></h1>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th class="text-col"><%= t ".index" %></th>
        <th class="text-col"><%= t ".name" %></th>
        <th class="text-col"><%= t ".email" %></th>
        <th class="text-col"><%= t ".dob" %></th>
        <th class="text-col"><%= t ".phone" %></th>
        <th class="text-col"><%= t ".address" %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each.with_index do |user, index| %>
        <tr>
          <td class="text-col">
            <% params[:page] ||= Settings.value.admin_page %>
          </td>
          <td class="text-col"><%= user.username %></td>
          <td class="text-col"><%= user.email %></td>
          <td class="text-col"><%= user.dob %></td>
          <td class="text-col"><%= user.phone %></td>
          <td class="text-col"><%= user.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @users, theme: "twitter-bootstrap-3" %>
