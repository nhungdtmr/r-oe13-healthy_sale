<% provide :title, t(".base_title") %>
<section>
  <div class="container">
    <div class="row">
      <%= render "layouts/side_bar" %>
      <div class="col-sm-9 padding-right">
        <div class="product-details">
          <div class="col-md-5">
            <div class="view-product">
              <%= image_tag @product.images.first.url.to_s, alt: "produt_i:e" %>
            </div>
            <div id="similar-product" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="item active">
                  <% @product.images.each do |img| %>
                    <%= image_tag img.url.to_s, style: "max-width: 100px; max-height: 100px", class: "img-responsive" %>
                  <% end %>
                </div>
                <div class="item">
                  <% @product.images.each do |img| %>
                    <%= image_tag img.url.to_s, style: "max-width: 100px; max-height: 100px", class: "img-responsive" %>
                  <% end %>
                </div>
                <div class="item">
                  <% @product.images.each do |img| %>
                    <%= image_tag img.url.to_s, style: "max-width: 100px; max-height: 100px", class: "img-responsive" %>
                  <% end %>
                </div>
              </div>
              <a class="left item-control" href="#similar-product" data-slide="prev">
                <i class="fa fa-angle-left"></i>
              </a>
              <a class="right item-control" href="#similar-product" data-slide="next">
                <i class="fa fa-angle-right"></i>
              </a>
            </div>
          </div>
          <div class="col-md-7">
            <div class="product-information">
              <h2><%= @product.name %></h2>
              <div class="row">
                <p><b><%= @product.manufacture %></b></p>
                <p><b><%= @product.net_weight %></b></p>
                <p><b><%= @product.description %></b></p>
                <h1><b><%= t ".type_price" %><%= @product.price %></b></h1>
                <div class="col-sm-3">
                  <h2><%= t ".quantity" %></h2>
                </div>
                <div class="col-sm-2">
                  <input type="text" value="" />
                </div>
                <div class="col-sm-1">
                  <button type="button" class="btn btn-fefault cart">
                    <i class="fa fa-shopping-cart"></i>
                    <%= t ".add_cart" %>
                </button>
                </div>
              </div>
              <p><b>Availability:</b> In Stock</p>
              <p><b>Condition:</b> New</p>
              <p><b>Brand:</b> HEATHY-SHOP</p>
              <a href=""><img src="images/product-details/share.png" class="share img-responsive"  alt="" /></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
